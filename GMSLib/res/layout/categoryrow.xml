<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal"
        android:background="@drawable/defaultbg">
   	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="5dip">
        <TextView 
            android:layout_width="wrap_content" 
            style="@android:style/TextAppearance.Large"
		    android:layout_height="wrap_content" 
		    android:id="@+id/categoryStatusHeader"
		    android:layout_marginRight="5dip"
            android:textColor="#000000"
		    android:gravity="left"
		    android:drawablePadding="5dip"
            android:drawableLeft="@drawable/image_missing16"/>
        <TextView 
            android:layout_width="wrap_content" 
            style="@android:style/TextAppearance.Small"
		    android:layout_height="wrap_content" 
		    android:id="@+id/categoryDetailsHeader"
            android:textColor="#000000"/>
    </LinearLayout>
    <RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="fill_parent">
    	<View 
        	android:layout_height="fill_parent"
    		android:layout_width="1dip"
    		android:layout_marginLeft="5dip"
    		android:background="@color/trans_dim_gray"
 			android:id="@+id/categorySeparator"
 			android:layout_toLeftOf="@+id/categoryListButton"/>
    	<ImageButton
			android:id="@+id/categoryListButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/layers"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:padding="17dip"
			android:background="@drawable/defaultbg"/>
	</RelativeLayout>
</LinearLayout>
