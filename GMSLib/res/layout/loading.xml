    		android:layout_height="wrap_content"
    		android:padding="5dip"/>       
        <TextView
    		android:id="@+id/mapCanvasLoadingText"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		style="@style/LoadingText"
    		android:text="@string/loadingText"/>
</LinearLayout>