<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:baselineAligned="false"
	android:id="@+id/mapCanvasWidgetL"
    android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:gravity="center" 
    android:background="@color/white"
    android:layout_gravity="center_horizontal">
    	<ImageView
    		android:id="@+id/mapCanvasLoadingImage"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/discover"
    		android:contentDescription="@string/loadingText"/>
        <ProgressBar
    		android:id="@+id/mapCanvasLoadingProgressBar"
    		style="@android:style/Widget.ProgressBar.Horizontal"
   	 		android:layout_width="128dip"
    		android:progressDrawable="@drawable/gms_progressbar"
    		android:layout_height="wrap_content"
    		android:padding="5dip"/>       
        <TextView
    		android:id="@+id/mapCanvasLoadingText"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		style="@style/LoadingText"
    		android:text="@string/loadingText"/>
</LinearLayout>